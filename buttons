from tkinter import *
def buttons():
    root = Tk()
    screen_height = root.winfo_screenheight()
    a = screen_height/8
    button1 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button1.grid(row = 0, column = 0, sticky = "snew", ipadx = a, ipady = a)
    button1.config(command = lambda: ButtonClick(1))
    button2 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button2.grid(row = 0, column = 1, sticky = "snew", ipadx = a, ipady = a)
    button2.config(command = lambda: ButtonClick(2))
    button3 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button3.grid(row = 0, column = 2, sticky = "snew", ipadx = a, ipady = a)
    button3.config(command = lambda: ButtonClick(3))
    button4 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button4.grid(row = 1, column = 0, sticky = "snew", ipadx = a, ipady = a)
    button4.config(command = lambda: ButtonClick(4))
    button5 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button5.grid(row = 1, column = 1, sticky = "snew", ipadx = a, ipady = a)
    button5.config(command = lambda: ButtonClick(5))
    button6 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button6.grid(row = 1, column = 2, sticky = "snew", ipadx = a, ipady = a)
    button6.config(command = lambda: ButtonClick(6))
    button7 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button7.grid(row = 2, column = 0, sticky = "snew", ipadx = a, ipady = a)
    button7.config(command = lambda: ButtonClick(7))
    button8 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button8.grid(row = 2, column = 1, sticky = "snew", ipadx = a, ipady = a)
    button8.config(command = lambda: ButtonClick(8))
    button9 = Button(root, text = "", bg = 'skyblue', activebackground = 'lightgreen')
    button9.grid(row = 2, column = 2, sticky = "snew", ipadx = a, ipady = a)
    button9.config(command = lambda: ButtonClick(9))
